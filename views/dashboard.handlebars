								<td>{{ this.data_full }}</td>
								<td>{{limit_znakow 40 this.opis }}</td>
							</tr>

						{{else}}

						{{/if}}
					{{/each}}

				</table>

			</div>
		</div>

	</div>

	<div class="row">

		<input id="search" class="col-md-5 offset-md-5" type="text" placeholder="Szukaj...">

