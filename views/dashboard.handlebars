			<div class="window overflow-auto">
		
				<table class="table table-striped table-hover text-light">
					
					{{#each cases}}
						{{#if this.przyjete}}
						
						{{else}}
							
							<tr onclick="location='/sprawy/{{this.id}}'">
								<td>{{ this.imie }} {{ this.nazwisko }}</td>
								<td>{{ this.adres }}</td>
								<td>{{ this.data_full }}</td>
								<td>{{limit_znakow 40 this.opis }}</td>
							</tr>

						{{/if}}
					{{/each}}

				</table>


			</div>
		</div>

		<div id="zakonczone" class="col-md-5 offset-md-2">
			Zakonczone sprawy:
			<div class="window overflow-auto">

				<table class="table table-striped table-hover text-light">
					
					{{#each cases}}
						{{#if this.zakonczone}}
							
							<tr onclick="location='/sprawy/{{this.id}}'">
								<td>{{ this.imie }} {{ this.nazwisko }}</td>
