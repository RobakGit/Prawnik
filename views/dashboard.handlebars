    <link rel="stylesheet" href="/css/menu.css">
    <link rel="stylesheet" href="/css/dashboard.css">
</head>
<body>

{{> menu }}

{{> messages }}

{{#if administrator }}

<div id="container">

	<div class="row">

		<div id="uzytkownicy" class="col-md-5">
			Użytkownicy:
			<div class="window overflow-auto">

				<table class="table table-striped text-light">
					
					{{#each users}}
					<tr>
						<td>{{ this.imie }} {{ this.nazwisko }}</td>
						<td>{{ this.miejscowosc }}</td>
						<td>{{ this.rola }}</td>
						<td>{{ this.rejestracja }}</td>
					</tr>
					{{/each}}

				</table>
		
			</div>
		</div>

		<div id="zakonczone" class="col-md-5 offset-md-2">
			Zakonczone sprawy:
			<div class="window overflow-auto">

				<table class="table table-striped table-hover text-light text-center align-middle">
					
					{{#each cases}}
						{{#if this.zakonczone}}
							
							<tr onclick="location='/sprawy/{{this.id}}'">
								<td class="align-middle">{{ this.imie }} {{ this.nazwisko }}</td>
								<td class="align-middle">{{ this.adres }}</td>
								<td class="align-middle">{{ this.data_full }}</td>
								<td class="align-middle">{{limit_znakow 40 this.opis }}</td>
							</tr>

						{{else}}

						{{/if}}
					{{/each}}

				</table>


			</div>
		</div>

	</div>

	<div class="row">

		<input id="search" class="col-md-5 offset-md-5 invisible" type="text" placeholder="Szukaj...">

	</div>

	<div class="row">

		<div id="sprawy" class="col-md-12">
			Aktualne sprawy:
			<div class="window-big overflow-auto">

				<table class="table table-striped table-hover text-light">

					<tr>
						<th>Imię i Nazwisko</th>
						<th>Adres</th>
						<th>Data zgłoszenia</th>
						<th>Opis</th>
					</tr>
					
					{{#each cases}}
						{{#if this.zakonczone}}

						{{else}}

							<tr onclick="location='/sprawy/{{this.id}}'">
								<td>{{ this.imie }} {{ this.nazwisko }}</td>
								<td>{{ this.adres }}</td>
								<td>{{ this.data_full }}</td>
								<td>{{limit_znakow 140 this.opis}}</td>
							</tr>

						{{/if}}
					{{/each}}

				</table>
		
			</div>

		</div>
	</div>

</div>

{{else}}

